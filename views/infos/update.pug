extends ../layout

block content
    form
        h1 업데이트 하는 곳이에용
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.label(for='store_name') 가게명
            input#store_name.form-control.mb-5( name='storeName', type='text' placeholder="??" value=store.store_name)
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.label(for='store_num') 가게 고유번호
            input#store_num.form-control.mb-5( name='storeNum', type='text' readonly placeholder="??" value=store.store_num)
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            div
                h3.mt-5.mb-5.label(for='store_img') 대표이미지
                //div.box(style='width: 100px; height: 100px; background-color: #f0f0f0; border: 1px solid #ccc; padding: 10px;')
                div
                    input.mb-5(type="file",id='store_img1' class="form-control", name="chooseFile" accept="image/*" onchange="loadFile(this)")
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            div
                h3.mt-5.mb-5.label(for='store_img') 이미지 등록
                //div(style='display:flex; justify-content: space-around; align-items:center;')
                input.mb-5(type="file", class="form-control", id="store_img2", name="chooseFile" accept="image/*" onchange="loadFile(this)")
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.label(for='sub_category') 가게 업종
            select.form-select.mb-5(name="select_sub_category1")
                option(value="") 음식점 선택
                option(value='1') 고기
                option(value='2') 돈까스, 회, 일식
                option(value='3') 탕, 찜, 찌개
                option(value='4') 양식
                option(value='5') 중식
                option(value='6') 아시안
                option(value='7') 패스트푸드
                option(value='8') 백반, 국수
                option(value='9') 분식
            select.form-select.mb-5(name="select_sub_category2")
                option(value='') 술집 선택
                option(value='10') 호프집
                option(value='11') 바
                option(value='12') 이자카야
                option(value='13') 포차
                option(value='14') 와인바
            select.form-select.mb-5(name="select_sub_category3")
                option(value='') 카페 선택
                option(value='15') 커피전문점
                option(value='16') 디저트카페
                option(value='17') 차전문점
                option(value='18') 베이커리카페
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.label(for='address') 가게 주소
            input#address.form-control.mb-5(name='address', type='text' placeholder="??" value=store.address)
        hr
        div
            h3.mt-5.mb-5 가게전화번호
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='store_call') 대표 번호
                input#store_call.form-control.mb-5(name='storeCall', type='text' placeholder="??" value=storeManage.store_call)
        hr
        form#addStoreInfo(action='/' method='post')
            h3.mt-5.mb-5 가게 소개 글
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='detail_info') 가게 디테일 소개글 작성
                input#detailInfo.form-control.mb-4(name='detailInfo', type='text' placeholder="??" value=store.detail_info)
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='short_info') 가게 한줄 소개글 작성
                input#shortInfo.form-control.mb-5(name='shortInfo', type='text' placeholder="??" value=store.short_info)
        hr
        div
            h3.mt-5.mb-5 url 등록
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='blog')(style='display: inline-block; margin-right: 10px;') 블로그 url
                input#blog.form-control.mb-4(name='blog', type='text' placeholder="영업 날짜" value=store.blogurl)
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='youtube')(style='display: inline-block; margin-right: 10px;') 유튜브 url
                input#youtube.form-control.mb-4(name='youtube', type='text' placeholder="휴무일" value=store.youtubeurl)
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='facebook')(style='display: inline-block; margin-right: 10px;') 페이스북 url
                input#facebook.form-control.mb-4(name='facebook', type='text' placeholder="??" value=store.facebookurl)
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='insta')(style='display: inline-block; margin-right: 10px;') 인스타 url
                input#insta.form-control.mb-4(name='insta', type='text' placeholder="??" value=store.instaurl)
        hr
        div
            h3.mt-5.mb-5 영업 시간
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='week')(style='display: inline-block; margin-right: 10px;') 영업 날짜
                input#week.form-control.mb-4(name='week', type='text' placeholder="영업 날짜")
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='regular_closeDay')(style='display: inline-block; margin-right: 10px;') 휴무일
                input#regular_closeday.form-control.mb-4(name='regularCloseDay', type='text' placeholder="휴무일")
            div
                h5.mb-3 브레이크 타임
                div.d-flex
                    div.form-floating(method="post", enctype="multipart/form-data")
                        h5.mb-3.label.fs-6(for='rest_start_time')(style='display: inline-block; margin-right: 10px;') 휴식 시작 시간
                        input#rest_start_time.form-control.mb-4(name='rest_start_time', type='time' placeholder="??")
                    div.form-floating(method="post", enctype="multipart/form-data")
                        h5.mb-3.label.fs-6(for='rest_end_time')(style='display: inline-block; margin-right: 10px;') 휴식 끝 시간
                    input#rest_end_time.form-control.mb-4(name='rest_end_time', type='time' placeholder="??")
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='opentime')(style='display: inline-block; margin-right: 10px;') 영업 시간
                input#opentime.form-control.mb-4(name='openTime', type='text' placeholder="??" value=store.opentime)
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='lastorder')(style='display: inline-block; margin-right: 10px;') 라스트 오더
                input#lastorder.form-control.mb-4(name='lastOrder', type='text' placeholder="??" value=store.lastorder)
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='waiting_closetime')(style='display: inline-block; margin-right: 10px;') 웨이팅 마감 시간
                input#waiting_closetime.form-control.mb-5(name='waitingClosetime', type='text' placeholder="??" value=store.waiting_closetime)
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.label(for='madein') 원산지 표시
            h4.mb-3 재료에 대한 원산지 표시
            textarea.form-control(id='madein' placeholder="??" value=store.madein)
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.labe 방송 출연 정보
            h4.mb-3.label(for='media') 출연 매채 등록
            input#media.form-control.mb-5(name='media', type='text' placeholder="??")
        hr
        div
            h3.mt-5.mb-5 편의 시설
            div.mb-5(style='display:flex; justify-content: space-around; align-items:center;')
                div(style='display:flex; flex-direction:column; align-items:center')
                    div
                        label 주차 편의
                    div.form-check.form-switch.d-flex.align-items-center
                        label.form-check-label.me-5(for="flexSwitchCheckDefault1") OFF
                        input.form-check-input(type="checkbox", role="switch", id="flexSwitchCheckDefault1", style="width: 2.5rem; height: 1.5rem;", checked=(store.parking == 1))
                        label.form-check-label.ms-2(for="flexSwitchCheckDefault1") ON
                div(style='display:flex; flex-direction:column; align-items:center')
                    div
                        label 애기 의자
                    div.form-check.form-switch.d-flex.align-items-center
                        label.form-check-label.me-5(for="flexSwitchCheckDefault2") OFF
                        input.form-check-input(type="checkbox", role="switch", id="flexSwitchCheckDefault2", style="width: 2.5rem; height: 1.5rem;", checked=(store.babychair == 1))
                        label.form-check-label.ms-2(for="flexSwitchCheckDefault2") ON
                div(style='display:flex; flex-direction:column; align-items:center')
                    div
                        label 흡연실
                    div.form-check.form-switch.d-flex.align-items-center
                        label.form-check-label.me-5(for="flexSwitchCheckDefault3") OFF
                        input.form-check-input(type="checkbox", role="switch", id="flexSwitchCheckDefault3", style="width: 2.5rem; height: 1.5rem;", checked=(store.smokingroom == 1))
                        label.form-check-label.ms-2(for="flexSwitchCheckDefault3") ON
                div(style='display:flex; flex-direction:column; align-items:center')
                    div
                        label 와이파이
                    div.form-check.form-switch.d-flex.align-items-center
                        label.form-check-label.me-5(for="flexSwitchCheckDefault4") OFF
                        input.form-check-input(type="checkbox", role="switch", id="flexSwitchCheckDefault4", style="width: 2.5rem; height: 1.5rem;", checked=(store.wifi == 1))
                        label.form-check-label.ms-2(for="flexSwitchCheckDefault4") ON
                div(style='display:flex; flex-direction:column; align-items:center')
                    div
                        label 화장실 구분
                    div.form-check.form-switch.d-flex.align-items-center
                        label.form-check-label.me-5(for="flexSwitchCheckDefault5") OFF
                        input.form-check-input(type="checkbox", role="switch", id="flexSwitchCheckDefault5", style="width: 2.5rem; height: 1.5rem;")
                        label.form-check-label.ms-2(for="flexSwitchCheckDefault5") ON
        hr
        form#addHash(action='/' method='post')
            h3.mt-5.mb-5 해시태그 등록
            input#hash.form-control.mb-5(name='hash', type='text' placeholder="해시태그 등록")
        hr
        input#submit.btn.btn-primary.form-control.mt-5.mb-5(value="등록", placeholder="등록")