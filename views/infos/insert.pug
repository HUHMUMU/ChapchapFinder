extends ../layout

block content
    form#addInfoForm(method='post' action='/infos/insert.do')
        h1.mt-5 가게정보입력
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            div
                h3.mt-5.mb-5.label(for='store_img') 대표이미지
                //div.box(style='width: 100px; height: 100px; background-color: #f0f0f0; border: 1px solid #ccc; padding: 10px;')
                div
                    input.mb-5(type="file",id='store_img1' class="form-control", name="chooseFile" accept="image/*" onchange="loadFile(this)")
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            div
                h3.mt-5.mb-5.label(for='store_img') 이미지 등록
                //div(style='display:flex; justify-content: space-around; align-items:center;')
                input.mb-5(type="file", class="form-control", id="store_img2", name="chooseFile" accept="image/*" onchange="loadFile(this)")
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.label(for='sub_category') 가게 업종
            select.form-select.mb-5(name="select_sub_category1")
                option(value="") 음식점 선택
                option(value='1') 고기
                option(value='2') 돈까스, 회, 일식
                option(value='3') 탕, 찜, 찌개
                option(value='4') 양식
                option(value='5') 중식
                option(value='6') 아시안
                option(value='7') 패스트푸드
                option(value='8') 백반, 국수
                option(value='9') 분식
            select.form-select.mb-5(name="select_sub_category2")
                option(value='') 술집 선택
                option(value='10') 호프집
                option(value='11') 바
                option(value='12') 이자카야
                option(value='13') 포차
                option(value='14') 와인바
            select.form-select.mb-5(name="select_sub_category3")
                option(value='') 카페 선택
                option(value='15') 커피전문점
                option(value='16') 디저트카페
                option(value='17') 차전문점
                option(value='18') 베이커리카페
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.label(for='store_num') 가게 고유 번호
            input#store_num.form-control.mb-5( name='storeNum', type='text' placeholder="39450939")
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.label(for='address') 가게 주소
            input#address.form-control.mb-5(name='address', type='text' placeholder="경기 파주시 지목로 43 101~105호")
        hr
        div
            h3.mt-5.mb-5 가게전화번호
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='store_call') 대표 번호
                input#store_call.form-control.mb-5(name='storeCall', type='text' placeholder="031-9999-9999")
        hr
        form#addStoreInfo(action='/' method='post')
            h3.mt-5.mb-5 가게 소개 글
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='detail_info') 가게 디테일 소개글 작성
                input#detailInfo.form-control.mb-4(name='detailInfo', type='text' placeholder="가게 상세 소개글 작성 (가게 메인에 올라가는 글입니다.)")
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='short_info') 가게 한줄 소개글 작성
                input#shortInfo.form-control.mb-5(name='shortInfo', type='text' placeholder="가게 한 줄 소개글 작성 (가게 미리보기에 올라가는 글입니다.)")
        hr
        div
            h3.mt-5.mb-5 영업 시간
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='week')(style='display: inline-block; margin-right: 10px;') 영업 날짜
                input#week.form-control.mb-4(name='week', type='text' placeholder="영업 날짜")
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='regular_closeDay')(style='display: inline-block; margin-right: 10px;') 휴무일
                input#regular_closeday.form-control.mb-4(name='regularCloseDay', type='text' placeholder="휴무일")
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='break_time')(style='display: inline-block; margin-right: 10px;') 브레이크 타임
                input#breaktime.form-control.mb-4(name='breakTime', type='text' placeholder="브레이크 타임")
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='opentime')(style='display: inline-block; margin-right: 10px;') 영업 시간
                input#opentime.form-control.mb-4(name='openTime', type='text' placeholder="영업 시간")
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='lastorder')(style='display: inline-block; margin-right: 10px;') 라스트 오더
                input#lastorder.form-control.mb-4(name='lastOrder', type='text' placeholder="라스트 오더")
            div.form-floating(method="post", enctype="multipart/form-data")
                h5.mb-3.label(for='waiting_closetime')(style='display: inline-block; margin-right: 10px;') 웨이팅 마감 시간
                input#waiting_closetime.form-control.mb-5(name='waitingClosetime', type='text' placeholder="웨이팅 마감 시간")
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.label(for='madein') 원산지 표시
            h4.mb-3 재료에 대한 원산지 표시
            textarea.form-control(id='madein' placeholder="염병염병여병쳠ㅁ병~~~")
        hr
        div.form-floating(method="post", enctype="multipart/form-data")
            h3.mt-5.mb-5.labe 방송 출연 정보
            div.d-flex.justify-content-between
                h4.mb-3 출연 매채 등록
                button.mb-3.btn.btn-light(id="addTvInfoBtn",type="button") 추가
            div#addTvInfo
                div
                    input.form-control.mb-2(name='channal', type='text' placeholder="채널 명을 입력하세요")
                    input.form-control.mb-2(name='episode', type='text' placeholder="회차를 입력하세요")
                    input.form-control.mb-2(name='tv_url', type='text' placeholder="방송 영상 링크가 있을시, 입력해주세요")
                    input.form-control.mb-4(name='tv_date', type='text' placeholder="방영된 날짜를 입력해주세요")
                    hr
        hr
        div
            h3.mt-5.mb-5 편의 시설
            div.mb-5(style='display:flex; justify-content: space-around; align-items:center;')
                div(style='display:flex; flex-direction:column; align-items:center')
                    div
                        label 주차 편의
                    div.form-check.form-switch.d-flex.align-items-center
                        label.form-check-label.me-5(for="flexSwitchCheckDefault1") OFF
                        input.form-check-input(type="checkbox", role="switch", id="flexSwitchCheckDefault1", style="width: 2.5rem; height: 1.5rem;")
                        label.form-check-label.ms-2(for="flexSwitchCheckDefault1") ON
                div(style='display:flex; flex-direction:column; align-items:center')
                    div
                        label 애기 의자
                    div.form-check.form-switch.d-flex.align-items-center
                        label.form-check-label.me-5(for="flexSwitchCheckDefault2") OFF
                        input.form-check-input(type="checkbox", role="switch", id="flexSwitchCheckDefault2", style="width: 2.5rem; height: 1.5rem;")
                        label.form-check-label.ms-2(for="flexSwitchCheckDefault2") ON
                div(style='display:flex; flex-direction:column; align-items:center')
                    div
                        label 흡연실
                    div.form-check.form-switch.d-flex.align-items-center
                        label.form-check-label.me-5(for="flexSwitchCheckDefault3") OFF
                        input.form-check-input(type="checkbox", role="switch", id="flexSwitchCheckDefault3", style="width: 2.5rem; height: 1.5rem;")
                        label.form-check-label.ms-2(for="flexSwitchCheckDefault3") ON
                div(style='display:flex; flex-direction:column; align-items:center')
                    div
                        label 와이파이
                    div.form-check.form-switch.d-flex.align-items-center
                        label.form-check-label.me-5(for="flexSwitchCheckDefault4") OFF
                        input.form-check-input(type="checkbox", role="switch", id="flexSwitchCheckDefault4", style="width: 2.5rem; height: 1.5rem;")
                        label.form-check-label.ms-2(for="flexSwitchCheckDefault4") ON
                div(style='display:flex; flex-direction:column; align-items:center')
                    div
                        label 화장실 구분
                    div.form-check.form-switch.d-flex.align-items-center
                        label.form-check-label.me-5(for="flexSwitchCheckDefault5") OFF
                        input.form-check-input(type="checkbox", role="switch", id="flexSwitchCheckDefault5", style="width: 2.5rem; height: 1.5rem;")
                        label.form-check-label.ms-2(for="flexSwitchCheckDefault5") ON
        hr
        form#addHash(action='/' method='post')
            h3.mt-5.mb-5 해시태그 등록
            input#hash.form-control.mb-5(name='hash', type='text' placeholder="해시태그 등록")
        hr
        input#submit.btn.btn-primary.form-control.mt-5.mb-5(value="Input", placeholder="제출")

    script.
        const addTvInfoBtn = document.getElementById("addTvInfoBtn");
        const addTvInfo = document.getElementById("addTvInfo");
        addTvInfoBtn.addEventListener("click",(e)=>{
            addTvInfo.insertAdjacentHTML("beforeend",tvInputComponent());
        });
        function tvInputComponent(){
            return `
                        <div>
                          <input class="form-control mb-3 mt-4" name="channal" type="text" placeholder="채널 명을 입력하세요">
                          <input class="form-control mb-2" name="episode" type="text" placeholder="회차를 입력하세요">
                          <input class="form-control mb-2" name="tv_url" type="text" placeholder="방송 영상 링크가 있을시, 입력해주세요">
                          <input class="form-control mb-4" name="tv_date" type="text" placeholder="방영된 날짜를 입력해주세요">
                          <hr>
                        </div>
            `;
        }

