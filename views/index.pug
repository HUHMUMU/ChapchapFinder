                                            li.d-flex.border 133번
                                                div.border.d-flex 인원 및 대기시간
                                    div.d-inline-block
                                        div
                                            li 총 대기 인원 수
                                        div
                                            li 총 대기 팀 수
                                        div
                                            li 마지막 대기번호


                    div.d-inline-flex.m-auto.align-content-center.flex-column.w-50
                        div.m-auto.text-center.align-content-center.pb-5
                            div.flex-column.m-auto
                                button
                                    a(href="/") 홍보 url
                            div.flex-column.m-auto
                                button
                                    a(href="/") 기본 시간/인원 설정
                            div.flex-column.m-auto
                                button
                                    a(href="/") 웨이팅 ON
                                button
                                    a(href="/") 웨이팅 OFF

                        main
                              // 입장순서가 제일 가까운 3팀만 표시하는 영역
                              #closest-teams
                                h2 입장순서가 가장 가까운 3팀
                                table
                                  thead
                                    tr
                                      th 대기번호
                                      th 팀명
                                      th 인원수
                                      th 대기시간
                                      th 입장알림
                                      th 입장취소
                                  tbody
                                    each team in closestTeams
                                      tr
                                        td= team.id
                                        td= team.teamName
                                        td= team.numPeople
                                        td= team.waitingTime
                                        td
                                          form(action='/notify', method='post')
                                            input(type='hidden', name='teamId', value=team.id)
                                            button(type='submit') 알림 보내기
                                        td
                                          form(action='/cancel', method='post')
                                            input(type='hidden', name='teamId', value=team.id)
                                            button(type='submit') 취소하기

                              // 그 외의 대기중인 팀 표시하는 영역
                              #other-teams
                                h2 그 외 대기중인 팀
                                table
                                  thead
                                    tr
                                      th 대기번호
                                      th 팀명
                                      th 인원수
                                      th 대기시간
                                  tbody
                                    each team in otherTeams
                                      tr
                                        td= team.id
                                        td= team.teamName
                                        td= team.numPeople
                                        td= team.waitingTime

                                // 대기중인 팀이 7팀 이상일 경우 마지막 팀만 표시
                                if (otherTeams.length > 7)
                                  p ... (총 #{otherTeams.length}팀 대기중)
                                  table
                                    thead
                                      tr
                                        th 대기번호
                                        th 팀명
                                        th 인원수
                                        th 대기시간
                                    tbody
                                      tr
                                        td= otherTeams[otherTeams.length-1].id
                                        td= otherTeams[otherTeams.length-1].teamName
                                        td= otherTeams[otherTeams.length-1].numPeople
                                        td= otherTeams[otherTeams.length-1].waitingTime