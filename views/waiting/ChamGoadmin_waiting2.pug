extends layout

block content
    div.mt-3
        ul.d-flex.list-unstyled
            li
                a.btn.btn-outline-secondary.btn-sm.m-2(href=`/reviews/list.do`) 리뷰 관리
            li
                a.btn.btn-outline-secondary.btn-sm.m-2(href=`/`) 가게 정보 관리
            li
                a.btn.btn-outline-secondary.btn-sm.m-2(href=`/menu/manage.do`) 가게 메뉴 관리
            li
                a.btn.btn-outline-secondary.btn-sm.m-2(href=`/reviews/admin_waiting.do`) 웨이팅 관리
        h1= title
            // 1 위치
            div#waiting
                h2 Waiting List
                table
                    thead
                        tr
                            th Wait Num
                            th User People
                            th Start Time
                            th Enter Notification
                            th Enter Complete
                            th Enter Cancel
                    tbody
                        each waiting in waitingList
                            tr
                                td= waiting.wait_num
                                td= waiting.user_people
                                td= waiting.start_time
                                td
                                    button(class='enter-notification' data-waitingnum=waiting.waiting_num) Enter Notification
                                td
                                    button(class='enter-complete' data-waitingnum=waiting.waiting_num) Enter Complete
                                td
                                    button(class='enter-cancel' data-waitingnum=waiting.waiting_num) Enter Cancel
            // 2 위치
            div#waiting-info
                h2 Waiting Information
                table
                    thead
                        tr
                            th Wait Num
                            th User People
                            th Waiting Time
                            th Waiting Time Set
                    tbody
                        each waiting in waitingInfo
                            tr
                                td= waiting.wait_num
                                td= waiting.user_people
                                td= waiting.waiting_time
                                td= waiting.time_setup
            // 3 위치
            div#waiting-stats
                h2 Waiting Stats
                p Total Teams: #{waitingStats.totalTeams}
                p Total People: #{waitingStats.totalPeople}
            // 4 위치
            div#store-config
                h2 Store Configuration
                div#store-ads
                    label(for='store-ads-input') Store Ads URL:
                    input#store-ads-input(type='text')
                    button#store-ads-submit Submit
                div#time-setup
                    label(for='time-setup-input') Default Waiting Time (min):
                    input#time-setup-input(type='number')
                    button#time-setup-submit Submit
                div#closing-time
                    label(for='closing-time-input') Closing Time:
                    input#closing-time-input(type='time')
                    button#closing-time-submit Submit